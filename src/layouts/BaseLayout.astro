---
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import '@/styles/index.css'
import { generateBaseUrl } from '@/utils/generateBaseUrl'

const { title } = Astro.props

const path = Astro.url.pathname

const isHome = path === '/'
const documentTitle = isHome || !title ? 'PalmPlayground' : `${title} | PalmPlayground`
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${generateBaseUrl('/favicon.svg')}`} />
    <meta name="generator" content={Astro.generator} />
    <title>{documentTitle}</title>

    <script is:inline src={`${generateBaseUrl('/theme-selector.js')}`}></script>
  </head>
  <body>
    <Header />
    <main class="main-container main-padding">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: var(--bg-brand);
    color: var(--text-onbrand);
  }
  main {
    flex-grow: 1;
    max-width: 960px;
    width: 100%;
    margin-inline: auto;
    padding-inline: var(--main-pi);
    margin-block-end: var(--space-lg);
  }
</style>
